<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="htwg.de.hitbook.SettingsActivity">

    <TextView
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDelAllData"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_all_data_btn"
        android:id="@+id/buttonDeleteAllData"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Sync"
        android:id="@+id/button"
        android:onClick="onBluetooth"
        android:layout_below="@+id/textViewDelAllData"
        android:layout_alignLeft="@+id/buttonDeleteAllData"
        android:layout_alignStart="@+id/buttonDeleteAllData"
        android:layout_alignRight="@+id/buttonDeleteAllData"
        android:layout_alignEnd="@+id/buttonDeleteAllData" />


</RelativeLayout>
